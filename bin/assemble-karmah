#!/bin/env bash

libdir=$(dirname $(dirname $(readlink -f ${BASH_SOURCE[0]})))/lib
file="${1:-karmah}"

for lib in $libdir/pre.bash $libdir/*/*.bash; do
    echo adding $lib
    printf '\n#####################################\n# %s\n' $(basename $lib) >>"$file"
    cat $lib  >>"$file"
done
printf '\n#####################################\nmain "${@}"\n' >>"$file"
chmod 755 "$file"
